{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}
	    ,{
            "path" : "pages/cart/cart",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "购物车"
              
            }
            
        }
        ,{
            "path" : "pages/goods/goods",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品"
              
            }
            
        }
        ,{
            "path" : "pages/auth/login",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "登录",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/auth/register",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "注册",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/center/baseinfo",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "修改个人信息",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/goods/showInfo",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品详情",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/order/order",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "订单详情",
                "enablePullDownRefresh": false
            },
			"app-plus":{
				"autoBackButton":"true"
			}
            
        }
        ,{
            "path" : "pages/cart/order/address/address",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "地址详情",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/cart/order/address/addAddress",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "添加地址",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/center/collectedGoods",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的收藏",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#909399",
	    "selectedColor": "#1296db",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "static/icon/home01.png",
	        "selectedIconPath": "static/icon/home02.png",
	        "text": "首页"
	    },  {
		    "pagePath": "pages/goods/goods",
		    "iconPath": "static/icon/goods01.png",
		    "selectedIconPath": "static/icon/goods02.png",
		    "text": "商品"
		},{
	        "pagePath": "pages/cart/cart",
	        "iconPath": "static/icon/cart01.png",
	        "selectedIconPath": "static/icon/cart02.png",
	        "text": "购物车"
	    },{
	        "pagePath": "pages/center/index",
	        "iconPath": "static/icon/me01.png",
	        "selectedIconPath": "static/icon/me02.png",
	        "text": "我"
	    }
		]
	}
}
